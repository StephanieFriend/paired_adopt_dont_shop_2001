<div class ="shelter-pic">
<div class="list-page-shelter">

	<h1 id="dominant-header">Shelters</h1>
	<br>
	<div class="shelter-border">
	<% @shelters.each do |shelter| %>
	<h3 id="shelter"><%= link_to "#{shelter.name}", "/shelters/#{shelter.id}" %></h3>
	<a href="/shelters/<%= "#{shelter.id}" %>/edit" class="btn btn-primary btn-lg a-btn-slide-text">
		<span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
		<span><strong>Edit</strong></span>
	</a>
	<%= link_to 'Delete', "/shelters/#{shelter.id}", method: :delete, class: 'btn btn-danger btn-lg', data: { confirm: "Are you sure you want to delete #{shelter.name}?" } %>
	<br><br>
	<% end %>
	</div><br><br>
	<div class="button1"><%= link_to 'Create New Shelter', "/shelters/new", class: 'btn blue-gradient btn-lg '%>
</div>
	</div>
	</div>
