<div class="application-page">
<header id="page-header">
  <h1 id="dominant-header" >Application Details</h1><br/><br/>
</header>
<main>
  <section>

    <div class="container1">
    <h4 id ="h4header">Name</h4>
     <p id ="app-info"><%= @application.name %></p><br/>
     </div>
     <div class="container1">
    <h4 id ="h4header">Address</h4><br/>
      <p id ="app-info"> <%= @application.address %></p><br/>
      </div>
      <div class="container1">
    <h4 id ="h4header">City</h4><br/>
      <p id ="app-info"><%= @application.city %></p><br/>
      </div>
      <div class="container1">
    <h4 id ="h4header">State</h4><br/>
      <p id ="app-info"><%= @application.state %></p><br/>
      </div>
      <div class="container1">
    <h4 id ="h4header">Zip</h4><br/>
      <p id ="app-info"><%= @application.zip %></p>
      </div>
      <div class="container1">
    <h4 id ="h4header">Phone Number</h4><br/>
      <p id ="app-info"><%= @application.phone_number %></p><br/><br/>
      </div>
      <div class="container1">
    <h4 id ="h4header">What Makes Your Home Ideal?</h4><br/>
      <p id ="app-info"><%= @application.description %></p><br/><br/>
      </div>
      </div>
    </section>
    <section>
      <h4 id ="h4header">Pets Applied For</h4><br/>
      <% @application.pets.each do |pet|%>
      <section id="pet-links<%= pet.id %>">
        <%= link_to pet.name, "/pets/#{pet.id}", class: 'btn btn-primary'%><br/>
        <% @petapps.each do |petapp| %>
        <% if petapp.approved && petapp.application_id == @application.id%><br/>
          <%= link_to "Revoke Application For: #{pet.name}", "/pets/#{pet.id}/applications/#{@application.id}/revoke_status", method: :patch, class: 'btn btn-danger'%>
        <% else %><br/>
          <%= link_to "Approve Application For: #{pet.name}", "/pets/#{pet.id}/applications/#{@application.id}/approve_status", method: :patch, class: 'btn btn-success'%>
        <% end %>
          <% end %>
      </section>
      <% end %>
    </section>
  </main>
  <div>
