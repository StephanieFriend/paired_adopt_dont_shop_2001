<div class="form-group">
  <form action='/pets/<%= @pet.id %>/favorites' method='post'>
    <% if session[:favorites] != nil && session[:favorites].include?(@pet.id.to_s) %>
      <%= button_to 'Un-favorite This Pet', "/pets/#{@pet.id}/favorite", data: { confirm: "Are you sure?" } %>
    <% else %>
      <%= button_to 'Favorite This Pet', "/pets/#{@pet.id}/favorite", data: { confirm: "Are you sure?" } %>
    <% end %>
	</form>

	<h1>Info</h1>
	<h4><%= @pet.name %></h4>
	<%= image_tag @pet.image, :class => "image" %>
	<h4>Description:</h4>
	<%= @pet.description  %>
	<br/>
	<br/>
	<h4>Approximate Age:</h4>
	<%= @pet.age %>
	<br/>
	<br/>
	<h4>Sex:</h4>
	<%= @pet.sex %>
	<br/>
	<br/>
	<h4>Status:</h4>
	<%= @pet.status %>
	<br/>
	<br/>
	<h4>Shelter:</h4>
	<%= link_to "#{@pet.shelter.name}", "/shelters/#{@pet.shelter.id}" %>
	<br/>
	<br/>
	<form action='/pets/<%= @pet.id %>' method='post'>
	  <%= link_to 'Edit', "/pets/#{@pet.id}/edit" %>
	  <%= link_to 'Delete', "/pets/#{@pet.id}", method: :delete,  data: { confirm: "Are you sure?" }%>
	</form>

	</div>
