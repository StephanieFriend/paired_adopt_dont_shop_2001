<div class="list-page">

    <form action='/pets/<%= @pet.id %>/favorites' method='post'>
      <% if session[:favorites] != nil && session[:favorites].include?(@pet.id.to_s) %>
        <%=link_to  'Un-favorite This Pet', "/pets/#{@pet.id}/favorite", data: { confirm: "Are you sure you want to remove #{@pet.name} from you favorites?"}, class: 'btn btn-danger' %>
      <% else %>
        <%= link_to 'Favorite This Pet', "/pets/#{@pet.id}/favorite", data: { confirm: "#{@pet.name} will be added to your favorites?" }, class: 'btn btn-success'%>
      <% end %>
    </form>

  <section>
  <br/><br/>
	<h1 id="dominant-header">Info</h1>
	<h4><%= @pet.name %></h4>
  <% if @pet.status == "pending" %>
    <%= "On hold for #{@pet.owner}"%><br/>
  <% end %>
  <h4>Adoption Status: <%= @pet.status %></h4><br/>
	<%= image_tag @pet.image, :class => "image" %>
	<h4>Description:</h4>
	<%= @pet.description  %><br/>
	<h4>Approximate Age:</h4>
	<%= @pet.age %><br/>
	<h4>Sex:</h4>
	<%= @pet.sex %><br/>
	<h4>Shelter:</h4>
	<%= link_to "#{@pet.shelter.name}", "/shelters/#{@pet.shelter.id}" %><br/>
  </section>

	<form action='/pets/<%= @pet.id %>' method='post'>
	  <%= link_to 'Edit', "/pets/#{@pet.id}/edit", class: 'btn btn-info'%>
	  <%= link_to 'Delete', "/pets/#{@pet.id}", method: :delete,  data: { confirm: "Are you sure want to delete #{@pet.name}?" }, class: 'btn btn-info'%>
	</form>
  <div>
    <br/>
    <%= link_to 'View All Applications', "/pets/#{@pet.id}/pet_applications", class: 'btn btn-info' %>
  </div>
</div>
