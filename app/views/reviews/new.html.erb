<header id="page-header">
  <h1>New Review</h1>
</header>
<main>
  <section>
    <%= form_tag("/shelters/#{@shelter.id}", method: :post) do %>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputTitle">Title</label>
        <%= text_field_tag :title %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-7">
        <label for="inputRating">Rating</label><br/>
        <%= radio_button_tag(:rating, 1) %>
        <%= label_tag 1 %><br/>
        <%= radio_button_tag(:rating, 2) %>
        <%= label_tag 2 %><br/>
        <%= radio_button_tag(:rating, 3) %>
        <%= label_tag 3 %><br/>
        <%= radio_button_tag(:rating, 4) %>
        <%= label_tag 4 %><br/>
        <%= radio_button_tag(:rating, 5) %>
        <%= label_tag 5 %><br/>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-8">
        <label for="inputContent">Content</label>
        <%= text_field_tag :content %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-9">
        <label for="inputState">Picture (optional)</label>
        <%= text_field_tag :image %>
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <% end %>
  </section>
</main>
